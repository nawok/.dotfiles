[user]
name = Pavel Fomchenkov
email = hello@pavel.codes

[init]
defaultBranch = main

[core]
excludesfile = ~/.gitignore_global
editor = nvim

[push]
default = simple

[pull]
rebase = true
ff = only

[fetch]
prune = true

[merge]
ff = false

[grep]
lineNumber = true

[diff]
wsErrorHighlight = all

[filter "lfs"]
required = true
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
